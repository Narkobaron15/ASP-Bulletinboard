@model IEnumerable<BulletinDTO>
@{
    ViewData["Title"] = "Your bulletins";
}

<h1 class="text-center display-4 fw-bold mt-3 mb-4">Your bulletins</h1>

<div class="d-flex flex-wrap justify-content-md-evenly">
    @foreach (var p in Model)
        @await Html.PartialAsync("_BulletinCardPartial", p)
    <a asp-action="Create" class="card mx-lg-4 my-2 col-12 col-md-5 col-lg-3 col-xxl-2">
        <div class="card-body">
            <div class="circledplus mx-auto"></div>
            <p class="mt-3 text-center">Add new bulletin</p>
        </div>
    </a>
</div>
